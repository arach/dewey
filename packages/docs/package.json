{
  "name": "@arach/dewey",
  "version": "0.1.0",
  "description": "Documentation toolkit with CLI and React components for agent-ready docs",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "dewey": "./dist/cli/index.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./react": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./css": "./dist/css/index.css",
    "./css/base.css": "./dist/css/base.css",
    "./css/colors/neutral.css": "./dist/css/colors/neutral.css",
    "./css/colors/ocean.css": "./dist/css/colors/ocean.css",
    "./css/colors/emerald.css": "./dist/css/colors/emerald.css",
    "./css/colors/purple.css": "./dist/css/colors/purple.css",
    "./css/colors/dusk.css": "./dist/css/colors/dusk.css",
    "./css/colors/rose.css": "./dist/css/colors/rose.css",
    "./css/colors/github.css": "./dist/css/colors/github.css",
    "./css/colors/warm.css": "./dist/css/colors/warm.css",
    "./styles": "./dist/css/index.css",
    "./tailwind": {
      "import": "./dist/tailwind/preset.js",
      "types": "./dist/tailwind/preset.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite build --watch",
    "build": "tsc && vite build && tsup src/cli/index.ts --format esm --out-dir dist/cli && tsup src/tailwind/preset.ts --format esm --dts --out-dir dist/tailwind",
    "clean": "rm -rf dist",
    "lint": "eslint src"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0",
    "react-router-dom": "^6.0.0 || ^7.0.0",
    "tailwindcss": "^3.0.0 || ^4.0.0"
  },
  "peerDependenciesMeta": {
    "tailwindcss": {
      "optional": true
    }
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "commander": "^12.0.0",
    "cosmiconfig": "^9.0.0",
    "gray-matter": "^4.0.3",
    "highlight.js": "^11.9.0",
    "lucide-react": "^0.400.0",
    "react-markdown": "^9.0.0",
    "rehype-slug": "^6.0.0",
    "remark-gfm": "^4.0.0",
    "tailwind-merge": "^2.2.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.3.0",
    "tsup": "^8.0.0",
    "typescript": "^5.5.0",
    "vite": "^6.0.0",
    "vite-plugin-dts": "^4.0.0"
  },
  "keywords": [
    "documentation",
    "docs",
    "cli",
    "react",
    "components",
    "agents",
    "llm",
    "markdown"
  ],
  "author": "Arach Tchoupani",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/arach/dewey"
  }
}
