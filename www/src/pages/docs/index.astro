---
import BaseLayout from '../../layouts/BaseLayout.astro'
import docsIndex from '../../../docs.json'
---

<BaseLayout title="Dewey Docs">
  <section class="space-y-10">
    <div class="space-y-3">
      <p class="text-xs uppercase tracking-widest text-[var(--color-text-muted)]">Documentation</p>
      <h1 class="text-4xl font-semibold">Dewey documentation</h1>
      <p class="max-w-2xl text-[var(--color-text-muted)]">
        Everything you need to audit, score, and generate agent-ready documentation.
      </p>
    </div>

    <div class="grid gap-4 md:grid-cols-2">
      {docsIndex.sections.map((section) => (
        <a
          class="rounded-[var(--radius-lg)] border border-[var(--color-border)] bg-[var(--color-surface)] p-5 shadow-[var(--shadow-soft)] transition hover:border-[var(--color-accent)]"
          href={`/docs/${section.id}`}
        >
          <h2 class="text-lg font-semibold">{section.title}</h2>
          <p class="mt-2 text-sm text-[var(--color-text-muted)]">{section.description}</p>
        </a>
      ))}
    </div>

    <div class="rounded-[var(--radius-lg)] border border-[var(--color-border)] bg-[var(--color-surface-muted)] p-5 text-sm text-[var(--color-text-muted)]">
      <p>
        Agent entry point: <a href="/agents" class="text-[var(--color-accent)]">/agents</a>.
        Raw markdown: <code>/docs/&lt;slug&gt;.md</code>.
      </p>
    </div>
  </section>
</BaseLayout>
