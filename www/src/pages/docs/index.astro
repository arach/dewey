---
import DocsLayout from '../../layouts/DocsLayout.astro'
import { homeGroups } from '../../lib/home'
---

<DocsLayout title="Documentation" headings={[]} rawMarkdown="" agentMarkdown="">
  <div class="space-y-10">
    {homeGroups.map((group) => (
      <div>
        <h2 id={group.title.toLowerCase().replace(/\s+/g, '-')} style="font-family: 'Noto Serif Display', serif; font-size: 1.4rem; font-weight: 300; letter-spacing: -0.02em; margin: 0 0 16px; padding: 0; border: none;">
          {group.title}
        </h2>
        <div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(280px, 1fr)); gap: 12px;">
          {group.cards.map((card) => (
            <a
              href={card.href}
              style="display: flex; flex-direction: column; justify-content: space-between; padding: 20px; border: 1px solid var(--color-border); border-radius: 8px; text-decoration: none; transition: all 0.15s; min-height: 120px;"
              onmouseover="this.style.borderColor='var(--color-text-muted)';this.style.background='var(--color-surface)'"
              onmouseout="this.style.borderColor='var(--color-border)';this.style.background='none'"
            >
              <div>
                <h3 style="font-family: 'Inter', sans-serif; font-size: 14px; font-weight: 500; margin: 0 0 6px; color: var(--color-text);">{card.title}</h3>
                <p style="font-size: 13px; font-weight: 300; color: var(--color-text-muted); margin: 0; line-height: 1.5;">{card.description}</p>
              </div>
              <p style="font-family: 'Geist Mono', monospace; font-size: 12px; color: var(--color-text-muted); margin: 12px 0 0; display: flex; align-items: center; gap: 4px;">
                Learn more
                <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M5 12h14M12 5l7 7-7 7"/></svg>
              </p>
            </a>
          ))}
        </div>
      </div>
    ))}
  </div>
</DocsLayout>
