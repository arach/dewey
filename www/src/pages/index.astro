---
import BaseLayout from '../layouts/BaseLayout.astro'
import { homeGroups } from '../lib/home'
---

<BaseLayout title="Dewey Docs">
  <section class="space-y-10">
    <div class="space-y-3">
      <p class="text-xs uppercase tracking-widest text-[var(--color-text-muted)]">Documentation Toolkit</p>
      <h1 class="text-4xl font-semibold">Agent-ready documentation with total control.</h1>
      <p class="max-w-2xl text-[var(--color-text-muted)]">
        Dewey audits, scores, and generates agent-ready documentation. This site is the dogfood:
        Astro + Base UI + Tailwind v4, with raw markdown endpoints for AI agents.
      </p>
    </div>

    <div class="space-y-10">
      {homeGroups.map((group) => (
        <div class="space-y-4">
          <h2 class="text-lg font-semibold text-[var(--color-text)]">{group.title}</h2>
          <div class="grid gap-4 md:grid-cols-2">
            {group.cards.map((card) => (
              <a
                class="group rounded-[var(--radius-lg)] border border-[var(--color-border)] bg-[var(--color-surface)] p-5 shadow-[var(--shadow-soft)] transition hover:border-[var(--color-accent)]"
                href={card.href}
              >
                <h3 class="text-base font-semibold text-[var(--color-text)]">{card.title}</h3>
                <p class="mt-2 text-sm text-[var(--color-text-muted)]">{card.description}</p>
                <p class="mt-4 text-xs text-[var(--color-accent)]">Open â†’</p>
              </a>
            ))}
          </div>
        </div>
      ))}
    </div>
  </section>
</BaseLayout>
